<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <TextView
            android:text="@string/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreText"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="177dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countDown" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="196dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remainTimeCount"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clickSpace"
            android:background="@android:color/transparent"
            android:clickable="false"
            tools:layout_editor_absoluteX="162dp" tools:layout_editor_absoluteY="341dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"/>

</androidx.constraintlayout.widget.ConstraintLayout>